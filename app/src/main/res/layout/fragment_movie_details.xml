<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 1) Top App Bar (контейнер + иконка + заголовок) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0E3165"
                tools:layout_height="56dp">

                <!-- 1.1) Стрелка назад -->
                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:src="@drawable/arrow_left_25"
                    app:tint="#FFFFFF"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- 1.2) Оригинальное название -->
                <TextView
                    android:id="@+id/tvOriginalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    style="@style/Text.Details_Original_Name"
                    android:paddingBottom="16dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    tools:text="The Mountain Between Us"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constrainedWidth="true" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 2) Постер 132x201 с закруглением 4dp -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPoster"
                android:layout_width="132dp"
                android:layout_height="201dp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="false">

                <ImageView
                    android:id="@+id/ivCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/poster"
                    tools:src="@drawable/no_img" />
            </androidx.cardview.widget.CardView>

            <!-- 3) Локализованное название -->
            <TextView
                style="@style/Text.Details_Local_Name"
                android:id="@+id/tvLocalizedName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                tools:text="Между нами горы" />

            <!-- 4) Жанры + год -->
            <TextView
                android:id="@+id/tvMeta"
                style="@style/Text.Details_Genres_Year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                tools:text="драма, 2017 год" />

            <!-- 5) Рейтинг (значение + метка «КиноПоиск») -->
            <LinearLayout
                android:id="@+id/ratingRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:baselineAligned="true">

                <!-- 5.1) Значение -->
                <TextView
                    style="@style/Text.Details_RatingValue"
                    android:id="@+id/tvRatingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    tools:text="6.7" />

                <!-- 5.2) Метка -->
                <TextView
                    style="@style/Text.Details_RatingLabel"
                    android:id="@+id/tvRatingLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/kinopoisk" />
            </LinearLayout>

            <!-- 6) Описание -->
            <TextView
                style="@style/Text.Details_Description"
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                tools:text="Бен и Алекс, уцелевшие после авиакатастрофы, должны найти общий язык..." />
        </LinearLayout>
    </ScrollView>

    <!-- Спиннер загрузки поверх контента -->
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>
